<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="AdwPreferencesPage" id="tweaks">
    <property name="name">tweaks</property>
    <property name="title" translatable="yes">Tweaks</property>
    <property name="icon-name">applications-symbolic</property>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Animation</property>
        <property name="description" translatable="yes">Tweak animation settings for performance or quality.</property>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Magnification</property>
            <property name="subtitle" translatable="yes"
              >Set maximum icon size when zoomed and animated.</property
            >
            <property name="activatable-widget">animation-magnify</property>
            <child>
              <object class="GtkScale" id="animation-magnify">
                <property name="valign">center</property>
                <property name="hexpand">true</property>
                <property name="width-request">140px</property>
                <property name="draw-value">false</property>
                <property name="value-pos">right</property>
                <property name="orientation">horizontal</property>
                <property name="digits">2</property>
                <property name="adjustment">animation-magnify-adjust</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Spread</property>
            <property name="subtitle" translatable="yes"
              >Set icons spread radius when zoomed and animated.</property
            >
            <property name="activatable-widget">animation-spread</property>
            <child>
              <object class="GtkScale" id="animation-spread">
                <property name="valign">center</property>
                <property name="hexpand">true</property>
                <property name="width-request">140px</property>
                <property name="draw-value">false</property>
                <property name="value-pos">right</property>
                <property name="orientation">horizontal</property>
                <property name="digits">2</property>
                <property name="adjustment">animation-spread-adjust</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Rise</property>
            <property name="subtitle" translatable="yes"
              >Set icons rise height when zoomed and animated.</property
            >
            <property name="activatable-widget">animation-rise</property>
            <child>
              <object class="GtkScale" id="animation-rise">
                <property name="valign">center</property>
                <property name="hexpand">true</property>
                <property name="width-request">140px</property>
                <property name="draw-value">false</property>
                <property name="value-pos">right</property>
                <property name="orientation">horizontal</property>
                <property name="digits">2</property>
                <property name="adjustment">animation-rise-adjust</property>
              </object>
            </child>
          </object>
        </child>
