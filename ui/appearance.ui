<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="AdwPreferencesPage" id="appearance">
    <property name="name">appearance</property>
    <property name="title" translatable="yes">Appearance</property>
    <property name="icon-name">dash-symbolic</property>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Icons</property>
        <property name="description" translatable="yes"></property>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Shrink Icons</property>
            <property name="subtitle" translatable="yes"
              >Shrink the dash icons size.</property
            >
            <property name="activatable-widget">shrink-icons</property>
            <child>
              <object class="GtkSwitch" id="shrink-icons">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Scale Icons</property>
            <property name="subtitle" translatable="yes"
              >Adjust icon sizes with custom scale. This overrides the shrink option.</property
            >
            <property name="activatable-widget">scale-icons</property>
            <child>
              <object class="GtkScale" id="scale-icons">
                <property name="valign">center</property>
                <property name="hexpand">true</property>
                <property name="width-request">140px</property>
                <property name="draw-value">false</property>
                <property name="value-pos">right</property>
                <property name="orientation">horizontal</property>
                <property name="digits">2</property>
                <property name="adjustment">scale-icons-adjust</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Dash</property>
        <property name="description" translatable="yes"
          >Customize the dash appearance.</property
        >

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Panel Mode</property>
            <property name="subtitle" translatable="yes"
              >Dock the dash on a full-width panel.</property
            >
            <property name="activatable-widget">panel-mode</property>
            <child>
              <object class="GtkSwitch" id="panel-mode">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes"
              >Border Radius</property
            >
            <property name="subtitle" translatable="yes"
              >Set dash background border radius.</property
            >
            <property name="activatable-widget">border-radius</property>
            <child>
              <object class="GtkScale" id="border-radius">
                <property name="valign">center</property>
                <property name="hexpand">true</property>
                <property name="width-request">140px</property>
                <property name="draw-value">false</property>
                <property name="value-pos">right</property>
                <property name="orientation">horizontal</property>
                <property name="digits">0</property>
                <property name="adjustment">border-radius-adjust</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Dark Background</property>
            <property name="subtitle" translatable="yes"
              >Use dark color as dash background.</property
            >
            <property name="activatable-widget">background-dark</property>
            <child>
              <object class="GtkSwitch" id="background-dark">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes"
              >Background Opacity</property
            >
            <property name="subtitle" translatable="yes"
              >Adjust dash background opacity.</property
            >
            <property name="activatable-widget">background-opacity</property>
            <child>
              <object class="GtkScale" id="background-opacity">
                <property name="valign">center</property>
                <property name="hexpand">true</property>
                <property name="width-request">140px</property>
                <property name="draw-value">false</property>
                <property name="value-pos">right</property>
                <property name="orientation">horizontal</property>
                <property name="digits">2</property>
                <property name="adjustment">background-opacity-adjust</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Running app indicator</property>
        <property name="description" translatable="yes"></property>

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Indicator Style</property>
            <property name="subtitle" translatable="yes"
              >Customize the running app indicator.</property
            >
            <property name="activatable-widget">running-indicator-style</property>
            <child>
              <object class="GtkDropDown" id="running-indicator-style">
                <property name="valign">center</property>
                <property name="model">running-indicator-style-model</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup">
        <property name="title" translatable="yes">Topbar</property>
        <property name="description" translatable="yes"
          ></property
        >

        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes"
              >Translucent Topbar</property
            >
            <property name="subtitle" translatable="yes"
              >Make the topbar translucent.</property
            >
            <property name="activatable-widget">translucent-topbar</property>
            <child>
              <object class="GtkSwitch" id="translucent-topbar">
                <property name="valign">center</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

  </object>

  <object class="GtkAdjustment" id="scale-icons-adjust">
    <property name="lower">0.0</property>
    <property name="upper">1.0</property>
    <property name="step-increment">0.01</property>
  </object>

  <object class="GtkAdjustment" id="background-opacity-adjust">
    <property name="lower">0.0</property>
    <property name="upper">1.0</property>
    <property name="step-increment">0.01</property>
  </object>

  <object class="GtkAdjustment" id="border-radius-adjust">
    <property name="lower">0</property>
    <property name="upper">6</property>
    <property name="step-increment">1</property>
  </object>

  <object class="GtkStringList" id="running-indicator-style-model">
    <items>
      <item translatable="yes">Default</item>
      <item translatable="yes">Dots</item>
      <item translatable="yes">Dashes</item>
      <item translatable="yes">Squares</item>
      <item translatable="yes">Segmented</item>
      <item translatable="yes">Solid</item>
    </items>
  </object>
</interface>
