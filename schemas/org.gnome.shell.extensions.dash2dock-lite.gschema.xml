<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="dash2dock-lite">
  <schema path="/org/gnome/shell/extensions/dash2dock-lite/" id="org.gnome.shell.extensions.dash2dock-lite">
    <key type="b" name="reuse-dash">
        <default>false</default>
        <summary>Reuse existing Dash</summary>
        <description>Reuse existing Dash instead of creating another instance.</description>
    </key>
    <key type="b" name="debug">
        <default>false</default>
        <summary>Debug Mode</summary>
        <description></description>
    </key>
    <key type="b" name="debug-log">
        <default>false</default>
        <summary>Logs</summary>
        <description>Enable debug logs</description>
    </key>
    <key type="b" name="debug-visual">
        <default>false</default>
        <summary>Visual Indicators</summary>
        <description>Enable debug visual indicators when animations are running.</description>
    </key>
    <key type="b" name="shrink-icons">
        <default>true</default>
        <summary>Shrink icons</summary>
        <description>Shrink dash icons.</description>
    </key>
    <key type="d" name="scale-icons">
        <default>0.0</default>
        <summary>Scale icons</summary>
        <description>Rescale dash icons/</description>
    </key>
    <key type="b" name="animate-icons">
        <default>true</default>
        <summary>Animate Icons</summary>
        <description>Animate dash icons on hover.</description>
    </key>
    <key type="b" name="autohide-dash">
        <default>false</default>
        <summary>Autohide dash panel</summary>
        <description>Animate dash icons on hover.</description>
    </key>
    <key type="b" name="pressure-sense">
        <default>false</default>
        <summary>Pressure sense</summary>
        <description>Move pointer down to force dash visibility.</description>
    </key>
    <key type="b" name="background-dark">
        <default>true</default>
        <summary>Dark background</summary>
        <description>Use dark color for dash background.</description>
    </key>
    <key type="d" name="background-opacity">
        <default>1</default>
        <summary>Background opacity</summary>
        <description>Set dash background opacity.</description>
    </key>
    <key type="d" name="border-radius">
        <default>3</default>
        <summary>Border radius</summary>
        <description>Set dash background border radius.</description>
    </key>
    <key type="b" name="translucent-topbar">
        <default>true</default>
        <summary>Translucent topbar</summary>
        <description>Make top bar translucent.</description>
    </key>
    <key type="b" name="trash-icon">
        <default>false</default>
        <summary>Show trash icon</summary>
        <description>Show a dynamic trash icon.</description>
    </key>
    <key type="b" name="mounted-icon">
        <default>false</default>
        <summary>Show mounted device icons</summary>
        <description>Show a mounted device icon.</description>
    </key>
    <key type="b" name="clock-icon">
        <default>false</default>
        <summary>Dynamic clock</summary>
        <description>Show a dynamic clock icon.</description>
    </key>
    <key type="b" name="calendar-icon">
        <default>false</default>
        <summary>Dynamic calendar</summary>
        <description>Show a dynamic calendar icon.</description>
    </key>
    <key type="b" name="peek-hidden-icons">
        <default>false</default>
        <summary>Peek hidden icons</summary>
        <description>Partially show animated icons when the dash is auto hidden.</description>
    </key>
    <key type="i" name="animation-fps">
        <default>0</default>
        <summary>Animation frame rate</summary>
        <description>Set animation frame rate. High setting shows smooth animations at the expense of high cpu resource.</description>
    </key>
    <key type="d" name="animation-magnify">
        <default>1</default>
        <summary>Icon magnification</summary>
        <description>Set icons spread radius when zoomed and animated.</description>
    </key>
    <key type="d" name="animation-spread">
        <default>1</default>
        <summary>Icons spread</summary>
        <description>Icon spread when animated.</description>
    </key>
    <key type="d" name="animation-rise">
        <default>1</default>
        <summary>Icons rise</summary>
        <description>Icon rise when animated.</description>
    </key>
    <key type="b" name="panel-mode">
        <default>false</default>
        <summary>Panel mode</summary>
        <description>Dock the dash on a full-width panel.</description>
    </key>
    <key type="b" name="apps-icon">
        <default>true</default>
        <summary>Apps icon</summary>
        <description>Show the apps icon.</description>
    </key>
    <key type="i" name="running-indicator-style">
        <default>0</default>
        <summary>Running window indicator</summary>
        <description>Customize the running window indicator style.</description>
    </key>
    <key type="(dddd)" name="running-indicator-color">
        <default>(1.,1.,1.,1.)</default>
        <summary>Running window indicator color</summary>
        <description>Customize the running window indicator color.</description>
    </key>
  </schema>
</schemalist>
